extends ../layout

block content
	.dashboard
		include ../partials/sidebar
		main.main
			.top
				.left
					p A text in the left
				.right
					p The icon in the right
			.content
				h1.content-title A couple of graphs
				.items-grid.items-graphs.grid-33
					.item
						canvas(id="chartBars")
block scripts
	script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js")
	script.
		var chart_bars = document.getElementById('chartBars')
		var chartBars = new Chart(chart_bars, {
			type: 'bar',
			data: {
				labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
				datasets: [{
					label: '# of Votes',
					data: [12, 19, 3, 5, 2, 3],
					backgroundColor: [
						'rgba(255, 99, 132, 0.2)',
						'rgba(54, 162, 235, 0.2)',
						'rgba(255, 206, 86, 0.2)',
						'rgba(75, 192, 192, 0.2)',
						'rgba(153, 102, 255, 0.2)',
						'rgba(255, 159, 64, 0.2)'
					],
					borderColor: [
						'rgba(255,99,132,1)',
						'rgba(54, 162, 235, 1)',
						'rgba(255, 206, 86, 1)',
						'rgba(75, 192, 192, 1)',
						'rgba(153, 102, 255, 1)',
						'rgba(255, 159, 64, 1)'
					],
					borderWidth: 1
				}]
			}, 
			options: {
				responsive: false
			}
		})
