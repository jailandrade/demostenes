extends ../layout

block content
	.login
		form.form-login(action="/login" method="post")
			h1 Sign In
			div.form-group
				label(for="email") Email
				input(type="email" required)
			div.form-group
				label(for="password") Password
				input(type="password" required)
			div.form-group
				input(type="submit" value="Login")
